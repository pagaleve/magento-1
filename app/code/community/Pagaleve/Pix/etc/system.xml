<?xml version="1.0"?>


<config>
	<sections>
        <payment translate="label" module="payment">
			<groups>
		      	<Pagaleve_Pix translate="label">
					<label>Pagaleve - PIX paid in 4x</label>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
				  	<show_in_website>1</show_in_website>
				  	<show_in_store>1</show_in_store>
                    <fields>
						<!-- create a field that shows the version of the module -->
						<module_version translate="label">
							<label>Module Version</label>
							<frontend_type>label</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
						</module_version>
				      	<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
					  		<show_in_store>0</show_in_store>
					    </active>
						<title translate="label">
					  		<label>Title</label>
					  		<frontend_type>text</frontend_type>
					  		<sort_order>20</sort_order>
					  		<show_in_default>1</show_in_default>
					  		<show_in_website>1</show_in_website>
					  		<show_in_store>1</show_in_store>
				      	</title>
						<environment translate="label">
							<label>Environment</label>
							<frontend_type>select</frontend_type>
							<source_model>Pagaleve_Pix/source_environment</source_model>
					  		<sort_order>30</sort_order>
					  		<show_in_default>1</show_in_default>
					  		<show_in_website>1</show_in_website>
					  		<show_in_store>1</show_in_store>
				      	</environment>
						<token_username translate="label">
							<label>Username</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<environment>1</environment>
							</depends>
						</token_username>
						<token_username_sandbox translate="label">
							<label>Username</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<environment>0</environment>
							</depends>
						</token_username_sandbox>
						<token_password translate="label">
							<label>Password</label>
							<frontend_type>password</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<environment>1</environment>
							</depends>
						</token_password>
						<token_password_sandbox translate="label">
							<label>Password</label>
							<frontend_type>password</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
								<environment>0</environment>
							</depends>
						</token_password_sandbox>
						<secret_key translate="label">
							<label>Secret Key</label>
							<frontend_type>password</frontend_type>
							<sort_order>55</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</secret_key>
						<order_status translate="label">
							<label>New Order Status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status_new</source_model>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</order_status>
						<retry_deadline translate="label">
							<label>Retry Deadline</label>
							<frontend_type>text</frontend_type>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</retry_deadline>
						<enabled_transparent_checkout translate="label">
							<label>Enabled Transparent Checkout</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>75</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
					  		<show_in_store>0</show_in_store>
					    </enabled_transparent_checkout>
						<sort_order translate="label">
							<label>Sort Order</label>
							<frontend_type>text</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<frontend_class>validate-number</frontend_class>
						</sort_order>
			  	     </fields>
                </Pagaleve_Pix>
				<pagaleve_upfront>
					<label>Pagaleve - PIX UpFront</label>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
				  	<show_in_website>1</show_in_website>
				  	<show_in_store>1</show_in_store>
                    <fields>
				      	<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
					  		<show_in_store>0</show_in_store>
					    </active>
						<title translate="label">
					  		<label>Title</label>
					  		<frontend_type>text</frontend_type>
					  		<sort_order>20</sort_order>
					  		<show_in_default>1</show_in_default>
					  		<show_in_website>1</show_in_website>
					  		<show_in_store>1</show_in_store>
				      	</title>
						<order_status translate="label">
							<label>New Order Status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status_new</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</order_status>
						<sort_order translate="label">
							<label>Sort Order</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<frontend_class>validate-number</frontend_class>
						</sort_order>
			  	     </fields>
				</pagaleve_upfront>
            </groups>
		</payment>
	</sections>
</config>